@{
    ViewBag.Title = "Página de Controle";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e9ecef;
            text-align: center; 
            position: relative; 
            height: 100vh; 
            margin: 0; 
            display: flex; 
            flex-direction: column; 
            justify-content: center; 
        }

        h1 {
            color: #343a40; 
            font-size: 2.5em; 
            margin-bottom: 10px; 
        }

        p {
            color: #6c757d; 
            font-size: 1.2em;
            margin-bottom: 30px; 
        }

        .control-buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin: 20px 0;
        }

        button {
            padding: 15px 25px;
            font-size: 16px;
            border: none;
            border-radius: 8px; 
            cursor: pointer;
            background-color: #007bff;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
            transition: background-color 0.3s, transform 0.2s; 
        }

            button:hover {
                background-color: #0056b3;
                transform: translateY(-2px); 
            }

        .bottom-buttons {
            position: absolute; 
            bottom: 20px; 
            left: 20px; 
            display: flex; 
            gap: 10px; 
        }

            .bottom-buttons button {
                background-color: #dc3545; 
            }

                .bottom-buttons button:hover {
                    background-color: #c82333; 
                }
    </style>
</head>
<body>
    <h1>Academia Felps</h1>
    <p>Controle de Acesso</p>

    <div class="control-buttons">
        <button onclick="window.location.href='@Url.Action("Index", "Planos")'">Planos</button>
        <button onclick="window.location.href='@Url.Action("Index", "Aulas")'">Aulas</button>
        <button onclick="window.location.href='@Url.Action("Index", "Instrutors")'">Instrutores</button>
        <button onclick="window.location.href='@Url.Action("Index", "Treinos")'">Treinos</button>
        <button onclick="window.location.href='@Url.Action("Index", "Usuarios")'">Usuários</button>
        <button onclick="window.location.href='@Url.Action("Index", "Pagamentos")'">Pagamentos</button>
    </div>

    <div class="bottom-buttons">
        <button onclick="window.location.href='@Url.Action("Index", "Home")'">Início</button>
        <button onclick="window.location.href='@Url.Action("Logout", "Admin")'">Logout</button>
    </div>
</body>
</html>
