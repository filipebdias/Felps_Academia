@{
    ViewBag.Title = "Página de Controle";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e9ecef;
            text-align: center; /* Centraliza o conteúdo */
            position: relative; /* Para o posicionamento dos botões */
            height: 100vh; /* Altura total da página */
            margin: 0; /* Remove margens padrão */
            display: flex; /* Para centralizar o conteúdo */
            flex-direction: column; /* Direção do flex */
            justify-content: center; /* Centraliza verticalmente */
        }

        h1 {
            color: #343a40; /* Cor do título */
            font-size: 2.5em; /* Tamanho do título */
            margin-bottom: 10px; /* Margem abaixo do título */
        }

        p {
            color: #6c757d; /* Cor do texto */
            font-size: 1.2em; /* Tamanho do texto */
            margin-bottom: 30px; /* Margem abaixo do texto */
        }

        .control-buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin: 20px 0; /* Margem acima e abaixo */
        }

        button {
            padding: 15px 25px;
            font-size: 16px;
            border: none;
            border-radius: 8px; /* Bordas mais arredondadas */
            cursor: pointer;
            background-color: #007bff;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Sombra para profundidade */
            transition: background-color 0.3s, transform 0.2s; /* Transições suaves */
        }

            button:hover {
                background-color: #0056b3;
                transform: translateY(-2px); /* Elevação no hover */
            }

        .bottom-buttons {
            position: absolute; /* Posiciona os botões */
            bottom: 20px; /* Distância do fundo */
            left: 20px; /* Distância da esquerda */
            display: flex; /* Exibe os botões em linha */
            gap: 10px; /* Espaço entre os botões */
        }

            .bottom-buttons button {
                background-color: #dc3545; /* Cor do botão de logout */
            }

                .bottom-buttons button:hover {
                    background-color: #c82333; /* Cor do botão de logout no hover */
                }
    </style>
</head>
<body>
    <h1>Academia Felps</h1>
    <p>Controle de Acesso</p>

    <div class="control-buttons">
        <button onclick="window.location.href='@Url.Action("Index", "Planos")'">Planos</button>
        <button onclick="window.location.href='@Url.Action("Index", "Aulas")'">Aulas</button>
        <button onclick="window.location.href='@Url.Action("Index", "Instrutores")'">Instrutores</button>
        <button onclick="window.location.href='@Url.Action("Index", "Treinos")'">Treinos</button>
        <button onclick="window.location.href='@Url.Action("Index", "Usuarios")'">Usuários</button>
        <button onclick="window.location.href='@Url.Action("Index", "Pagamentos")'">Pagamentos</button>
    </div>

    <div class="bottom-buttons">
        <button onclick="window.location.href='@Url.Action("Index", "Home")'">Início</button>
        <button onclick="window.location.href='@Url.Action("Logout", "Admin")'">Logout</button>
    </div>
</body>
</html>
