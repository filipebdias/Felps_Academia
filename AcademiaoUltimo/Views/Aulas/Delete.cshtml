@model AcademiaoUltimo.Models.Aula

@{
    ViewBag.Title = "Delete";
}

<style>
    .page-title {
        font-size: 1.8rem;
        color: #007bff;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .btn-primary, .btn-default {
        background-color: #007bff;
        color: #fff;
        padding: 8px 16px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        border: none;
    }

        .btn-primary:hover, .btn-default:hover {
            background-color: #0056b3;
        }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .confirmation-box {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: auto;
    }

    .form-actions {
        margin-top: 20px;
    }

    .dl-horizontal dt {
        font-weight: bold;
        color: #555;
    }

    .dl-horizontal dd {
        margin-left: 0;
        color: #333;
    }
</style>

<div class="confirmation-box">
   
    <h3>Tem certeza que deseja apagar isso?</h3>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Instrutor.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Instrutor.Nome)</dd>

        <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Nome)</dd>

        <dt>@Html.DisplayNameFor(model => model.Data)</dt>
        <dd>@Html.DisplayFor(model => model.Data)</dd>

        <dt>@Html.DisplayNameFor(model => model.Local)</dt>
        <dd>@Html.DisplayFor(model => model.Local)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Deletar" class="btn btn-danger" />
            @Html.ActionLink("Voltar para a lista", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
