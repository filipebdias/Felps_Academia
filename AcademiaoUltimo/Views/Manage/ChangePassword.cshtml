@model AcademiaoUltimo.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Alterar senha";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    main {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #007bff;
    }

    h4 {
        margin-top: 20px;
        color: #343a40;
    }

    .text-danger {
        margin-bottom: 15px;
    }

    .row {
        margin-bottom: 15px;
    }

    .col-form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 4px;
        border: 1px solid #ced4da;
        box-shadow: none;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn {
        width: 100%;
        padding: 10px;
        font-size: 16px;
    }

    .btn-outline-dark {
        border-color: #343a40;
        color: #343a40;
    }

        .btn-outline-dark:hover {
            background-color: #343a40;
            color: white;
        }
</style>

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Formulário de Alteração de Senha</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="row">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Senha antiga" })
            </div>
        </div>

        <div class="row">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Nova senha" })
            </div>
        </div>

        <div class="row">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar nova senha" })
            </div>
        </div>

        <div class="row">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Alterar senha" class="btn btn-outline-dark" />
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
